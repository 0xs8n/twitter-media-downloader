{
  "manifest_version": 3,
  "name": "Twitter Media Downloader Simple",
  "version": "1.0",
  "description": "Download media from Twitter profiles individually",

  "permissions": ["downloads", "offscreen"],

  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://pbs.twimg.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["offscreen.html", "offscreen.js", "jszip.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
